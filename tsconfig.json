{
  "compilerOptions": {
    "target": "es2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": [               // ⬅️  ADICIONE
      "ES2020",            //     mantém recursos modernos
      "DOM"                //     habilita tipos do navegador
    ],
    "types": ["node"],     // mantém declarações do Node
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["src", "scripts"],
  "exclude": [
    "node_modules",
    "build",
    "github-action/dist",
    "scripts",            // <--- ESSA linha ignora o seu problema
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
