{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "./scripts",
    "esModuleInterop": true,
    "types": ["node"],
    "moduleDetection": "force",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["scripts/**/*.ts", "*.ts"],
  "exclude": ["node_modules"]
}