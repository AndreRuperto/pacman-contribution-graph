{
  "compilerOptions": {
    "target": "es2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "types": ["node"],
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["src", "scripts"],
  "exclude": [
    "node_modules",
    "build",
    "github-action/dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}