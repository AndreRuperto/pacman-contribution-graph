{
    "compilerOptions": {
      "target": "es2017",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "downlevelIteration": true,
      "outDir": "dist",
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }  